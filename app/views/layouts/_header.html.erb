<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:c_r), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(:home), home_path %></li>
        <% if current_user&.admin? %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %><%= t(:_course) %> <b class= "caret"></b></a><% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(:add_course), new_course_path %></li>
              <li class="divider"></li>
              <li> <%= link_to t(:course_offered), courses_path %></li>
            </ul>
        <% else %>
          <li><%= link_to t(:help), help_path %></li>
          <li> <%= link_to t(:course_offered), courses_path %></li>
        <% end %>
        <% if logged_in? %>
          <% if current_user.admin %>
            <li><%= link_to t(:users), users_path %></li>
          <% end %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %><%= t(:account) %> <b class= "caret"></b></a><% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(:profile), current_user %></li>
              <li><%= link_to t(:settings), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t(:log_out), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(:log_in), login_path %></li>
        <% end %>
        <li><%= link_to "English", locale: :en %></li>
        <li><%= link_to t(:ja), locale: :jp %></li>
      </ul>
    </nav>
  </div>
</header>
